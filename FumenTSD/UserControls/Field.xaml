        <local:MinoViewer x:Name="Next" Width="37" Margin="206,17,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Height="24"></local:MinoViewer>
        <Grid Width="150" Height="120" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,17,0,0">
            <UniformGrid x:Name="FieldParent" Rows="8">
                <UniformGrid Rows="1" Background="#FF0010FF" >
                    <Button  Style="{StaticResource BlockEmpty}"></Button>
                    <Button  Style="{StaticResource BlockEmpty}"></Button>
                    <Button  Style="{StaticResource BlockEmpty}"></Button>
                    <Button  Style="{StaticResource BlockI}"></Button>
                    <Button  Style="{StaticResource BlockJ}"></Button>
                    <Button  Style="{StaticResource BlockL}"></Button>
                    <Button  Style="{StaticResource BlockT}"></Button>
                    <Button  Style="{StaticResource BlockS}"></Button>
                    <Button  Style="{StaticResource BlockZ}"></Button>
                    <Button  Style="{StaticResource BlockO}"></Button>
                </UniformGrid>
