<UserControl x:Class="FumenTSD.UserControls.Field"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FumenTSD.UserControls"
             mc:Ignorable="d" Height="138" Width="252"  x:Name="root">
    <UserControl.Resources>
        <Style x:Key="BlockEmpty" TargetType="Button">
            <Setter Property="Background" Value="White"/>
        </Style>
        <Style x:Key="BlockL" TargetType="Button">
            <Setter Property="Background" Value="Orange"/>
        </Style>
        <Style x:Key="BlockJ" TargetType="Button">
            <Setter Property="Background" Value="Blue"/>
        </Style>
        <Style x:Key="BlockT" TargetType="Button">
            <Setter Property="Background" Value="Purple"/>
        </Style>
        <Style x:Key="BlockI" TargetType="Button">
            <Setter Property="Background" Value="#FF89E0E0"/>
        </Style>
        <Style x:Key="BlockS" TargetType="Button">
            <Setter Property="Background" Value="Green"/>
        </Style>
        <Style x:Key="BlockZ" TargetType="Button">
            <Setter Property="Background" Value="Red"/>
        </Style>
        <Style x:Key="BlockO" TargetType="Button">
            <Setter Property="Background" Value="Yellow"/>
        </Style>
    </UserControl.Resources>
